@model IEnumerable<MusicStore.Domain.Domain.PartnerDomain.Track>

@{
    ViewData["Title"] = "Track List";
}

<h1 class="text-center">Tracks</h1>
@if (User.Identity.IsAuthenticated)
{
    <p>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </p>
}

<table class="table table-hover table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Title)</th>
            <th>Artist</th>
            <th>@Html.DisplayNameFor(model => model.Duration)</th>
            <th>@Html.DisplayNameFor(model => model.Genres)</th>
            <th>@Html.DisplayNameFor(model => model.Price)</th>
           
        </tr>
    </thead>
    <tbody>
        @foreach (var track in Model)
        {
            <tr>
                <td>@track.Title</td>
                <td>@track.Artist.Name</td>
                <td>@track.Duration.ToString(@"mm\:ss")</td>
                <td>@String.Join(", ", track.Genres)</td>
                <td> $@track.Price.ToString("F2")</td>
            </tr>
        }
    </tbody>
</table>
<style>
    .table {
        border-radius: 8px;
        overflow: hidden;
        background-color: #f8f9fa;
    }

        .table th, .table td {
            vertical-align: middle;
            text-align: center;
        }

        .table th {
            background-color: #343a40;
            color: #ffffff;
        }

    .table-hover tbody tr:hover {
        background-color: #f1f1f1;
    }

    .table td {
        padding: 10px 0 10px 0;
    }

    .btn {
        font-size: 12px;
        margin: 0 5px;
    }

</style>